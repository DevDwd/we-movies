{# templates/base.html.twig #}
<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>
			{% block title %}We Movies
			{% endblock %}
		</title>
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}
	</head>
	<body>
		<nav class="navbar">
			<div class="container">
				<div class="navbar-content">
					<div class="navbar-brand">
						<a href="{{ path('app_home') }}">
							<h1>We Movies</h1>
						</a>
					</div>
					<div class="search-container">
						<input type="text" class="search-input" placeholder="Rechercher un film...">
						<div class="search-results" style="display: none;"></div>
					</div>
				</div>
			</div>
		</nav>

		<main class="container">
			<div class="content-wrapper">
				<aside class="sidebar">
					<div class="genres-list">
						<h2>Filtrer par genres</h2>
						<form id="genre-filter-form" class="genre-form">
							{% for genre in genres|default([]) %}
								<div class="genre-item">
									<input type="checkbox" id="genre-{{ genre.id }}" name="genres[]" value="{{ genre.id }}" {% if selectedGenreIds is defined and genre.id in selectedGenreIds %} checked {% endif %} class="genre-checkbox">
									<label for="genre-{{ genre.id }}">{{ genre.name }}</label>
								</div>
							{% endfor %}
						</form>
					</div>
				</aside>

				<div class="main-content"> {% block body %}{% endblock %}
					</div>
				</div>
			</main>

			{% block javascripts %}
				{{ encore_entry_script_tags('app') }}
			{% endblock %}
		</body>
	</html>
