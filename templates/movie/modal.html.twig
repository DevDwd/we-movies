{# templates/movie/modal.html.twig #}
<div id="movieModal" class="modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <button type="button" class="modal-close">&times;</button>
            
            <div class="modal-body">
                <div class="modal-layout">
                    {# Colonne gauche: poster #}
                    <div class="modal-poster">
                        <img src="" alt="" id="modal-poster">
                    </div>

                    {# Colonne droite: infos #}
                    <div class="modal-info">
                        <h2 class="modal-title"></h2>
                        
                        <div class="modal-meta">
                            <span class="modal-year"></span>
                            <span class="modal-rating"></span>
                        </div>

                        <p class="modal-overview"></p>

                        <button class="modal-trailer-btn">
                            <span class="icon">▶</span>
                            Voir la bande annonce
                        </button>

                        <div class="modal-rating-section">
                            <h3>Noter ce film</h3>
                            <div class="rating-stars">
                                {% for i in 1..5 %}
                                    <span class="star" data-value="{{ i }}">☆</span>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>

                {# Container vidéo (initialement caché) #}
                <div class="modal-video-container"></div>
            </div>
        </div>
    </div>
</div>