{% extends 'base.html.twig' %}

{% block title %}
    {% if selectedGenreId is defined %}
        Films par genre - We Movies
    {% else %}
        Films Populaires - We Movies
    {% endif %}
{% endblock %}

{% block body %}
    {# Film à la une #}
    {% if movies|length > 0 %}
        {% include 'movie/best_movie.html.twig' with {'movie': movies|first} %}
    {% endif %}

    {# Grille des films (sans le premier film) #}
    {% include 'movie/movies_grid.html.twig' with {'movies': movies|slice(1)} %}

    {# Modal pour les détails du film #}
    {% include 'movie/modal.html.twig' %}
{% endblock %}